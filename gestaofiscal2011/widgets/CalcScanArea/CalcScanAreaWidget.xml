<?xml version="1.0" encoding="UTF-8"?>
<configuration label="Cálculo de Verificação de Área">
	<perfil>1</perfil>
	<maxScaleToSearch>2000</maxScaleToSearch>
	<layers>
		<layer id="Edificacao">
			<label>Edificações</label>
			<url>http://pgeo2.rio.rj.gov.br/ArcGIS/rest/services/Basico/mapa_basico_utm/MapServer/17</url>
			<fields>
				<field type=""					label="Edificação *"			field="COD_EDIFICA"				printGrid="true"	printGridWidth="100"	/>
				<field type=""					label="OBJECTID"				field="OBJECTID"				show="false"		/>
				<field type="ALTURA"			label="Altura"					field="ALTURA"					printGrid="false"	printGridWidth="60"		/>
				<field type="PAVIMENTOS"		label="Pavimentos *"			defaultValue="1"				printGrid="true"	printGridWidth="60"		/>
				<field type="PERIMETRO"			label="Perímetro"												printGrid="false"	printGridWidth="60"		/>
				<field type="AREA"				label="Área da Projeção"										printGrid="true"	printGridWidth="80"		/>
				<field type="BEIRAL"			label="Beiral (m) *"			defaultValue="0.5"				printGrid="true"	printGridWidth="50"	/>
				<field type="MARGEM"			label="Fator Correção (%) *"	defaultValue="10"				printGrid="true"	printGridWidth="100"	/>
				<field type="PERIMETROTOTAL"	label="Perímetro Total"											printGrid="false"	/>
				<field type="AREACORRIGIDA"		label="Área Total Corrigida"									printGrid="true"	printGridWidth="110"	/>
				<field type="AREATOTAL" 		label="Área Total" 												printGrid="false" />
			</fields>
		</layer>
		<layer id="NumeroPorta">
			<label>Número de Porta</label>
			<url>http://pgeo2.rio.rj.gov.br/ArcGIS/rest/services/Basico/mapa_basico_utm/MapServer/12</url>
			<fields>
				<field type="OBJECTID"			label=""						field="OBJECTID"				show="false"	/>
				<field type=""					label="ChaveGeo"				field="CHAVEGEO_NP"				/>
				<field type=""					label="CLNP"					field="CLNP"					/>
				<field type=""					label="Pavimentos"				field="NUM_PAVIMENTOS"			/>
			</fields>
		</layer>
		<layer id="IPTU">
			<relatedUrl token="true" field="CHAVE_GEO" gisField="CHAVEGEO_NP" gisLayer="NumeroPorta">http://geosmf.rio.rj.gov.br/arcgis/rest/services/Tributarios/Tributarios/MapServer/1</relatedUrl>
			<label>Base de Dados do IPTU</label>
			<url></url>
			<fields>
				<field type=""					label="ChaveGeo"				field="CHAVE_GEO"				/>
				<field type=""					label="InscriçãoIPTU"			field="INSCRICAO"				/>
				<field type=""					label="CLNP"					field="CLNP"					/>
				<field type=""					label="Área"					field="AREA"					/>
				<field type=""					label="Área Terreno"			field="AREA_TERRENO"			/>
				<field type=""					label="Valor Testada Real"		field="VALOR_TESTADA_REAL"		/>
			</fields>
		</layer>
		<layer id="Lote">
			<label>Lotes</label>
			<url>http://pgeo2.rio.rj.gov.br/ArcGIS/rest/services/Cartografia/Lotes_carto/MapServer/0</url>
			<fields>
				<field type="OBJECTID"			label=""						field="OBJECTID"				show="false"	/>
				<field type=""					label="Código Lote"				field="cod_Lote"				/>
				<field type=""					label="Área Terreno"			field="area_terreno"			/>
				<field type=""					label="Valor Testada Real"		field="testada_real"			/>
			</fields>
		</layer>
	</layers>
</configuration>